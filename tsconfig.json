{
  "compilerOptions": {
    "types": ["jest", "node", "chai", "chai-as-promised"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015"],
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "node",
    "allowJs": true,
    "isolatedModules": true
  },
  "include": ["tests", "src"],
  "exclude": ["node_modules"]
}
